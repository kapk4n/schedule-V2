<%= turbo_frame_tag :remote_modal, target: :_top do %>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-controller="bs-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> <%= t('.title') %> </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      
<div id='result_container'>
<% unless @pred.first.nil? %>
  <h2><%=@pred.first.day%></h2>
    <table class="table table-striped table-hover">
      <th>
        <%= t('.time') %>
      </th>
      <th>
        <%= t('.name') %>
      </th>
      <th>
        <%= t('.teacher') %>
      </th>
      <th>
        <%= t('.homework') %>
      </th>

      <% @pred.each do |par| %>
        <tr>
          <td> <%= par.time %> </td>
          <td> <%= link_to par.predmet.name, sub_prof_path(id: par.predmet.id), class:"link-info"%> </td>
          <td> <%= link_to par.predmet.teach.user.name, profile_path(id: par.predmet.teach.user.id), class:"link-info"%> </td>
          <td> <%= par.predmet.homework%> </td>
        </tr>
      <% end %>
    </table>

    </div>
      </div>
    </div>
  </div>
  <% else %>
  <div class="container">
  <h1> <%= t('.holid') %> </h1>
  </div>
      <% end %>

<% end %>

