<div id='result_container'>
<h2><%#=@user.name%></h2>


  <table class="table table-striped table-hover">
    <th><%= @pred%> </th>
    <% 7.times do %>
      <th> <%= @i += 1 %> </th>
    <% end %>
    
  <%= form_with model: @studs, url: creatus_path do |form| %>

    <% @studs.each do |qr| %>
    <tr>
      <td><%= qr.user.name %></td>
      <% qr.list.where(predmet_id: Predmet.find_by(name: @pred)).first.jresult.each do |we| %> 
      <td><%= form.label we %></td>
    <% end %>

    <td> <%= qr.list.where(predmet_id: Predmet.find_by(name: @pred)).first.jresult.sum %> </td>
    </tr> 
    <% end %>




    <% end %>
  </table>
</div>