<%= turbo_frame_tag :remote_modal, target: :_top do %>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-controller="bs-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= t('.title') %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
  <div class="modal-body">

    <%= form_with model: @user, url: sign_in_path do |form| %>


    <div class="form-group">
      <%= form.label value = t('.email'), class: "form-label mb-2 mt-3" %>
      <%= form.text_field :email, class:  "form-control form-control-lg", placeholder: "student@bmstu.ru" %>
    </div>
    <div class="form-group">
      <%= form.label value = t('.pass'), class: "form-label mb-2 mt-3" %>
      <%= form.password_field :password, class:  "form-control form-control-lg", placeholder: "password"%>
    </div>

    <%= link_to "#{t('.sub2')}", password_reset_path%>

    <div class="mb-3">
      <%= form.submit "#{t('.sub1')}", class: "btn btn-primary", id: 'login_accaunt-btn' %>
    </div>

<% end %>
    </div>
  </div>
  </div>
  </div>
</div>
<% end %>